@model web_DK_TT.Models.SinhVien
@{
    ViewData["Title"] = "Kết quả đăng ký";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card text-center shadow-lg border-0">
        <div class="card-header bg-success text-white">
            <h3>🎉 Đăng ký thành công!</h3>
        </div>
        <div class="card-body">
            <p class="fs-5">Cảm ơn bạn <strong>@Model.MSSV - @Model.HoTen</strong> đã đăng ký.</p>
            <p class="fs-5">📚 Chuyên ngành đã chọn: <strong>@Model.ChuyenNganh</strong></p>
            <hr />
            <p class="fs-5">👥 Số lượng sinh viên cùng chuyên ngành: <strong class="text-primary">@ViewBag.SoLuong</strong></p>
        </div>
        <div class="card-footer text-muted">
            <a href="/DangKyTT/Index" class="btn btn-outline-primary">🔁 Đăng ký mới</a>
        </div>
    </div>
</div>
