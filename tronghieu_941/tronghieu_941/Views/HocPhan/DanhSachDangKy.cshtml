<h2>Danh sách học phần đã đăng ký</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã học phần</th>
            <th>Tên học phần</th>
            <th>Số tín chỉ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hp in Model)
        {
            <tr>
                <td>@hp.MaHocPhan</td>
                <td>@hp.TenHocPhan</td>
                <td>@hp.SoTinChi</td>
                <td>
                    <a asp-action="XoaHocPhan" asp-route-maHocPhan="@hp.MaHocPhan" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="XacNhanDangKy" method="post">
    <button type="submit" class="btn btn-success">Xác nhận đăng ký</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-2">
        @TempData["Message"]
    </div>
}
