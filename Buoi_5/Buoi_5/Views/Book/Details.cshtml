@model Buoi_5.Models.Book
@{
    ViewData["Title"] = "Chi tiết sách";
}

<h2>Chi tiết sách</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.Title</h4>
        <p><strong>Tác giả:</strong> @Model.Author</p>
        <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
        <p><strong>Thể loại:</strong> @Model.Category?.Name</p>
        <p><strong>Mô tả:</strong> @Model.Description</p>
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" width="200" />
        }
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
</p>
