@model Buoi_5.Models.Book

@{
    ViewData["Title"] = "Xóa sách";
}

<h2>Bạn có chắc chắn muốn xóa sách này?</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("N0") đ</dd>

        <dt class="col-sm-2">Thể loại</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
    </dl>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
            <p><img src="@Model.ImagePath" width="200" /></p>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
